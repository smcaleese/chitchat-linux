<!DOCTYPE html>
<html lang="en">
  <head>
    <title>My Pages</title>
  </head>
  <body>
    <%= render 'layouts/general' %>
    <h2>My Pages</h2>

    <div class="mypages">
    <% @user.pages.each do |page| %>
        <% if page.user == @user %>
            <div class="mypages-row">
                <%= link_to page.title, page_path(page), class: 'mypages-link' %>&nbsp;&nbsp;
                <span class="edit">
                    <%= link_to 'edit', edit_page_path(page), class: 'mypages-link' %>
                </span>
                <span class="destroy">
                    <%= link_to 'Delete Page', page_path(page),
                    method: :delete,
                    data: { confirm: 'Are you sure you want to delete?' }, class: 'mypages-link' %>
                </span>
            </div>
        <% end %>
    <% end %>
    </div>

  </body>
</html>
