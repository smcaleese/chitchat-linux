<html lan="en">
    <head>
        <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.2/css/bootstrap.min.css">
        <script src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.2/js/bootstrap.min.js"></script>
    </head>

    <body>
        <div class=".container-fluid">

            <nav class="navbar navbar-default">
                <div class="navbar-header">
                    <%= link_to "Home", root_path, class: "navbar-brand" %>
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                </div>

                <div class="collapse navbar-collapse" id="myNavbar">
                    <ul class="nav navbar-nav navbar-right" style="margin-right: 20px;">
                        <% if user_signed_in? %>
                        <div class="nav-wrapper">
                            <div class="dropdown">
                              <%= link_to 'Pages', pages_path, class: 'pages-link' %>

                              <button class="btn btn-secondary dropdown-toggle my-profile-button" type="button" id="menu1" data-toggle="dropdown">My Profile
                              <span class="caret"></span></button>

                              <ul class="dropdown-menu" aria-labelledby="menu1">
                                <li role="presentation"><%= link_to 'My Pages', users_path %></li>
                                <li role="presentation"><%= link_to 'Create a new page', new_page_path %></li>
                                <li role="presentation"><%= link_to 'My Profile', edit_user_registration_path %></li>
                                <li role="presentation"><%= link_to "Logout", destroy_user_session_path, method: :delete %></li>
                              </ul>
                            </div>
                        </div>

                        <% else %>
                            <%= link_to 'Pages', pages_path, class: 'default-links default-pages-link' %>
                            <%= link_to "Sign up", new_user_registration_path, class: 'default-links' %>
                            <%= link_to "Login &#8594;".html_safe, new_user_session_path, class: 'default-links' %>
                        <% end %>
                    </ul>

                    <div class="footer">
                        <h4><%= link_to 'ChitChat was created in 2017', root_path, class: 'plain-link' %></h4>
                    </div>
                </div>
            </nav>
        </div>
    </body>
</html>
